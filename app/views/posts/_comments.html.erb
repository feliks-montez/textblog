<section class="comments">
  <h2>Comments</h2>
  <ul>
    <li class="row">
      <div class="avatar">
        <% if signed_in? %>
          <%= image_tag current_user.avatar_url(:thumb) %>
        <% else %>
          <%= image_tag 'default-avatar.png' %>
        <% end %>
      </div>
      <div class="comment-main flex">
        <%#= form_tag post_comments_path(post), class: 'row' do %>
          <%#= text_area_tag :body, '', placeholder: "Join the discussion..." %>
          
          <%#= submit_tag 'Comment!' %>
        <%# end %>
        
        <%= form_for Comment.new do |f| %>
          <%= hidden_field_tag :post_id, post.id %>
          
          <%= f.text_area :body, placeholder: "Join the discussion...", class: 'boxsizing-border' %>
          
          <%= f.submit 'Go! >>', class: 'left' %>
        <% end %>
      </div>
    </li>
    <% post.comments.each do |comment| %>
      <li class="row">
        <%= render 'comment', comment: comment %>
      </li>
    <% end %>
  </ul>
</section>
